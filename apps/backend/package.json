{
  "name": "backend",
  "version": "1.0.0",
  "description": "This is a taskify-backend used for serving the taskify-app. This is powered by Node.JS",
  "keywords": [
    "user",
    "task",
    "template",
    "instance",
    "customer",
    "parent-company"
  ],
  "type": "module",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist || rimraf dist",
    "build:ts": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "build:add-js": "ts-add-js-extension --dir=dist",
    "build": "pnpm run clean && tsc -p tsconfig.json && tsc-alias -p tsconfig.json && ts-add-js-extension --dir=dist && pnpm run copy-public-views",
    "copy-public-views": "cp -r ./views ./dist/apps/backend/views && cp -r ./public ./dist/apps/backend/public && cp -r ./src/templates ./dist/apps/backend/src/templates",
    "start": "node --stack-size=8192 dist/apps/backend/src/index.js",
    "dev": "nodemon --watch src --exec tsx --stack-size=8192 src/index.ts",
    "db:generate": "pnpm run build && drizzle-kit generate",
    "db:migrate": "pnpm run build && drizzle-kit migrate",
    "db:studio": "pnpm run build && drizzle-kit studio"
  },
  "author": "Harsh Nilesh Desai",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.901.0",
    "@aws-sdk/s3-request-presigner": "^3.901.0",
    "@repo/db": "workspace:*",
    "@types/jszip": "^3.4.1",
    "@types/socket.io": "^3.0.1",
    "@types/string-similarity": "^4.0.2",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.38.4",
    "drizzle-zod": "^0.6.1",
    "ejs": "^3.1.10",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "mime-type": "^5.0.3",
    "mime-types": "^3.0.1",
    "module-alias": "^2.2.3",
    "ms": "^2.1.3",
    "multer": "1.4.5-lts.2",
    "mysql2": "^3.14.3",
    "node-fetch": "^3.3.2",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3",
    "puppeteer": "^23.11.1",
    "qrcode": "^1.5.3",
    "qs": "^6.14.0",
    "socket.io": "^4.8.1",
    "string-similarity": "^4.0.4",
    "uuid": "^11.1.0",
    "xlsx": "^0.18.5",
    "zeptomail": "^6.2.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/mime-types": "^3.0.1",
    "@types/ms": "^2.1.0",
    "@types/node": "^22.10.2",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pg": "^8.11.10",
    "@types/qrcode": "^1.5.5",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.30.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "nodemon": "^3.1.9",
    "passport": "^0.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-add-js-extension": "^1.6.6",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsc-esm-fix": "^3.1.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "**/*.{ts,js,json,md,css}": [
      "npx prettier --write .",
      "git add"
    ]
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.{js,ts,json}",
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }
}
