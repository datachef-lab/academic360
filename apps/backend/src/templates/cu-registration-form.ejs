        }

      .form-section {
        margin: 10px 0;
        border: 1px solid #000;
      }

      .form-row {
        display: flex;
        border-bottom: 1px solid #000;
      }

      .form-row:last-child {
        border-bottom: none;
      }

      .form-field {
        flex: 1;
        display: flex;
        border-right: 1px solid #000;
      }

      .form-field:last-child {
