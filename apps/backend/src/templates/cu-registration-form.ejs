<body>
    <div class="form-container">
      <main class="px-2">
        <!-- Page 1 -->
        <div id="page-1" style="height: 100vh; position: relative; overflow: hidden;">
          <!-- Main Content Container -->
          <div style="position: relative; height: calc(100vh - 60px); overflow-y: auto; padding: 10px 0;">
          <!-- Header Section -->
          <header>
            <nav class="d-flex justify-content-center align-items-center gap-3">
              <div
                class="d-flex justify-content-center align-items-center pr-5 position-relative"
                style="width: 20%"
              >
                <img
                  src="<%= collegeLogoUrl %>"
                  alt="College Logo"
                  class="college-logo"
                />
              </div>
              <div style="width: 60%">
                <h1 class="college-name text-center fs-6">
                  <%= collegeName %>
                </h1>
                <div
                  class="d-flex flex-column justify-content-center align-items-center"
                >
                  <div class="college-address">
                    <%= collegeAddress %>
                  </div>
                  <div class="college-details">
                    <%= collegeDetails1 %>
                  </div>
                  <div class="college-details">
                    <%= collegeDetails2 %>
                  </div>
                </div>
              </div>
              <div style="width: 20%"></div>
            </nav>
          </header>
          <div class="pt-5">
        <!-- Rectification Banner (only show if rectification is opted) -->
            <% if (showRectificationBanner) { %>
            <div class="text-center mt-2 mb-4">
              <span style="font-size: 12pt; font-weight: bold; color: #d32f2f">Rectification Opted</span>
        </div>
        <% } %>
        
        <!-- Student Information Section -->
            <div
              class="d-flex justify-content-between align-items-center"
              style="border: 1px solid #000"
            >
              <div style="width: 80%" class="left">
                <!-- Row 1: Name -->
                <div class="d-flex" style="border-bottom: 1px solid #000">
                  <div
                    style="width: 25%; border-right: 1px solid #000"
                    class="label-cell"
                  >
                    Name
                  </div>
                  <div style="width: 75%" class="data-cell"><%= studentName %></div>
                </div>
                <!-- Row 2: UID and CU Form -->
                <div class="d-flex" style="border-bottom: 1px solid #000">
                  <div
                    style="width: 25%; border-right: 1px solid #000"
                    class="label-cell"
                  >
                    UID
                  </div>
                  <div
                    style="width: 25%; border-right: 1px solid #000"
                    class="data-cell"
                  >
                    <%= studentUid %>
                  </div>
                  <div
                    class="label-cell"
                    style="width: 25%; border-right: 1px solid #000"
                  >
                    CU Form No.
                  </div>
                  <div style="width: 25%; border-right: 1px solid #000" class="data-cell"><%= cuFormNumber %></div>
                </div>
                <!-- Row 3: Course and Shift -->
                <div class="d-flex">
                  <div
                    style="width: 25%; border-right: 1px solid #000"
                    class="label-cell"
                  >
                    Course
                  </div>
                  <div
                    style="width: 25%; border-right: 1px solid #000"
                    class="data-cell"
                  >
                    <%= programCourseName %>
                  </div>
                  <div
                    style="width: 25%; border-right: 1px solid #000"
                    class="label-cell"
                  >
                    Shift
                  </div>
                  <div style="width: 25%" class="data-cell"><%= shiftName %></div>
                </div>
              </div>
              <div style="width: 20%" class="right">
                <div class="photo-cell">
        <img
          src="<%= studentPhotoUrl %>"
          width="80"
          height="80"
          alt="Student Photo"
          style="width: 80px; height: 80px; border: 1px solid #000; object-fit: cover;"
          onerror="this.style.display='none'; this.nextElementSibling.style.display='block'; console.log('Image failed to load:', this.src);"
          onload="console.log('Image loaded successfully:', this.src);"
        />
        <div style="display: none; color: #d32f2f; font-weight: bold; text-align: center; padding: 10px; font-size: 10px;">
          Student photo to be captured from A360
        </div>
                </div>
              </div>
            </div>
        
        <!-- Documents Section -->
            <div class="documents-section my-4 pt-3 pb-3">
              <h4 class="fs-6 pt-1 pb-3">
                DOCUMENTS SUBMITTED ALONG WITH THIS FORM
              </h4>
              
              <!-- Always required documents -->
            <div class="document-item">
                <span class="document-checkbox"></span>
                <span>Photocopy of the original Class XII Board Marksheet.</span>
            </div>
            <div class="document-item">
                <span class="document-checkbox"></span>
                <span>Photocopy of Class X Board Admit Card / Birth Certificate issued by Government.</span>
            </div>

              <!-- Nationality-based documents -->
              <div class="document-item <%= isIndian ? '' : 'hidden' %>">
                <span class="document-checkbox"></span>
                <span>Photocopy of Aadhaar Card.</span>
            </div>
              <div class="document-item <%= isIndian ? '' : 'hidden' %>">
                <span class="document-checkbox"></span>
                <span>Photocopy of the APAAR (ABC) ID Card. (Not applicable for Foreign Nationals)</span>
            </div>
              <div class="document-item <%= isIndian ? 'hidden' : '' %>">
                <span class="document-checkbox"></span>
                <span>Photocopy of First and Last Page of Passport. (Applicable only for Foreign Nationals)</span>
            </div>

              <!-- Category-based documents -->
              <div class="document-item <%= isSCSTOBC ? '' : 'hidden' %>">
                <span class="document-checkbox"></span>
                <span>Photocopy of the Caste Certificate, issued by the Govt. of West Bengal. (Applicable only if applied under SC/ST/OBC category)</span>
            </div>

              <!-- Migration Certificate (always show with note) -->
            <div class="document-item">
                <span class="document-checkbox"></span>
                <span>Photocopy of the Original Migration Certificate. (NOT applicable for students belonging to WBCHSE/ISC/CBSE/NIOS board)</span>
            </div>

            <!-- PWD Certificate -->
            <div class="document-item <%= isPWD ? '' : 'hidden' %>">
                <span class="document-checkbox"></span>
                <span>Photocopy of the PWD Certificate. (Applicable only if applied under the Physically Handicap category)</span>
            </div>

            <!-- EWS Certificate -->
            <div class="document-item <%= isEWS ? '' : 'hidden' %>">
                <span class="document-checkbox"></span>
                <span>Photocopy of the EWS Certificate, issued by the Govt. of West Bengal. (Applicable only if applied under EWS category)</span>
            </div>

            <!-- CU Registration Certificate -->
            <div class="document-item <%= hasCURegistration ? '' : 'hidden' %>">
                <span class="document-checkbox"></span>
                <span>Photocopy of the Calcutta University Registration Certificate. (Applicable only for students registered with Calcutta University in the year 2024 or before)</span>
            </div>
        </div>
        <!-- QR Code Section -->
            <div class="qr-section my-4 py-3">
              <div class="qr-grid">
                <div class="qr-left">
                  <div class="qr-title">
                    Scan the QR Code to know your reporting details for Physical
                    Submission
            </div>
                  <svg
                    class="qr-arrow"
                    viewBox="0 0 80 16"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <defs>
                      <linearGradient
                        id="arrowBlue"
                        x1="0%"
                        y1="0%"
                        x2="0%"
                        y2="100%"
                      >
                        <stop offset="0%" stop-color="#5b8bd6" />
                        <stop offset="100%" stop-color="#2c5aa0" />
                      </linearGradient>
                    </defs>
                    <rect
                      x="0"
                      y="5"
                      width="60"
                      height="6"
                      fill="url(#arrowBlue)"
                    />
                    <polygon points="60,2 80,8 60,14" fill="url(#arrowBlue)" />
                  </svg>
        </div>
                <div class="qr-right">
                  <!-- Reserved for QR image -->
                </div>
            </div>
        </div>
          </div> <!-- End Main Content Container -->
        
            <div
              class="position-absolute d-flex justify-content-between align-items-center"
              style="bottom: -20px; left: 0; right: 0;"
            >
              <p style="width: 85%; font-size: 12px">
                This sheet is to be printed and submitted to the college in
                original as per the physical submission schedule given on the
                college website.
              </p>
              <p style="width: 15%; font-size: 12px" class="text-end">
                Page 1 of 4
              </p>
            </div>
            </div>
        </div>
        
        <!-- Page 2 -->
