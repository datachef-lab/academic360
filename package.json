{
    "name": "academic360",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "prepare": "husky"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "devDependencies": {
        "add": "^2.0.6",
        "autoprefixer": "^10.4.20",
        "husky": "^9.1.7",
        "postcss": "^8.4.49",
        "prettier": "^3.2.5",
        "tailwindcss": "^3.4.17",
        "turbo": "^2.3.3",
        "typescript": "5.5.4",
        "vite": "^6.0.6"
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "npm@10.9.2",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "dependencies": {
        "axios": "^1.7.9",
        "react-icons": "^5.4.0"
    }
}
